@model IEnumerable<PetShop.Models.Pet>

@{
    ViewData["Title"] = "Danh sách thú cưng";
}

<div class="container my-5">
    <h2 class="mb-4"><i class="fas fa-paw"></i> Danh sách thú cưng</h2>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" action="/Pets" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Danh mục</label>
                    <select name="categoryId" class="form-select">
                        <option value="">Tất cả</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.CategoryId" selected="@(ViewBag.SelectedCategory == category.CategoryId ? "selected" : null)">
                                @category.CategoryName
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="searchString" class="form-control" 
                           placeholder="Tên, giống..." value="@ViewBag.SearchString">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Giá từ</label>
                    <input type="number" name="minPrice" class="form-control" 
                           placeholder="0" value="@ViewBag.MinPrice">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Giá đến</label>
                    <input type="number" name="maxPrice" class="form-control" 
                           placeholder="999999999" value="@ViewBag.MaxPrice">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row g-4">
        @foreach (var pet in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card h-100">
                    <img src="@(string.IsNullOrEmpty(pet.ImageUrl) ? "https://via.placeholder.com/300x250?text=" + pet.PetName : pet.ImageUrl)" 
                         class="card-img-top" alt="@pet.PetName">
                    <div class="card-body">
                        <span class="badge badge-custom">@pet.Category?.CategoryName</span>
                        <h5 class="card-title mt-2">@pet.PetName</h5>
                        <p class="text-muted small mb-1">
                            <i class="fas fa-dog"></i> Giống: @pet.Breed
                        </p>
                        <p class="text-muted small mb-1">
                            <i class="fas fa-birthday-cake"></i> Tuổi: @pet.Age tháng
                        </p>
                        <p class="text-muted small mb-2">
                            <i class="fas fa-venus-mars"></i> Giới tính: @pet.Gender
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-danger mb-0">@pet.Price.ToString("N0") đ</span>
                            <span class="badge bg-success">Còn @pet.StockQuantity</span>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="row g-2">
                            <div class="col-6">
                                <a href="/Pets/Details/@pet.PetId" class="btn btn-outline-primary btn-sm w-100">
                                    <i class="fas fa-info-circle"></i> Chi tiết
                                </a>
                            </div>
                            <div class="col-6">
                                <button onclick="addToCart(@pet.PetId)" class="btn btn-primary btn-sm w-100">
                                    <i class="fas fa-cart-plus"></i> Mua
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-search fa-4x text-muted mb-3"></i>
            <h4>Không tìm thấy thú cưng nào</h4>
            <a href="/Pets" class="btn btn-primary mt-3">Xem tất cả</a>
        </div>
    }
</div>

@section Scripts {
<script>
    function addToCart(petId) {
        $.post('/Cart/AddToCart', { petId: petId, quantity: 1 }, function(response) {
            if (response.success) {
                alert(response.message);
            } else {
                if (confirm(response.message + '\nBạn có muốn đăng nhập không?')) {
                    window.location.href = '/Account/Login';
                }
            }
        });
    }
</script>
}
