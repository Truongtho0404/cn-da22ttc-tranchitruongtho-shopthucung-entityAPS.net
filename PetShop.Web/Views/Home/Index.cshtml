@model List<PetShop.Models.Pet>

@{
    ViewData["Title"] = "Trang chủ";
}

<div class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Chào mừng đến Pet Shop</h1>
                <p class="lead">Nơi tốt nhất để tìm người bạn bốn chân của bạn</p>
                <a href="/Pets" class="btn btn-primary btn-lg">
                    <i class="fas fa-search"></i> Khám phá ngay
                </a>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1450778869180-41d0601e046e?w=600" 
                     class="img-fluid rounded-3 shadow" alt="Pets">
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Danh mục thú cưng</h2>
        <p class="text-muted">Chúng tôi cung cấp đa dạng các loại thú cưng</p>
    </div>
    
    <div class="row g-4 mb-5">
        @foreach (var category in ViewBag.Categories)
        {
            <div class="col-md-4">
                <a href="/Pets?categoryId=@category.CategoryId" class="text-decoration-none">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="fas fa-paw fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">@category.CategoryName</h5>
                            <p class="card-text text-muted">@category.Description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    <div class="text-center mb-4">
        <h2 class="fw-bold">Thú cưng nổi bật</h2>
        <p class="text-muted">Những bé cưng đang chờ chủ mới</p>
    </div>

    <div class="row g-4">
        @foreach (var pet in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card h-100">
                    <img src="@(string.IsNullOrEmpty(pet.ImageUrl) ? "https://via.placeholder.com/300x250?text=" + pet.PetName : pet.ImageUrl)" 
                         class="card-img-top" alt="@pet.PetName">
                    <div class="card-body">
                        <span class="badge badge-custom">@pet.Category?.CategoryName</span>
                        <h5 class="card-title mt-2">@pet.PetName</h5>
                        <p class="text-muted small">@pet.Breed</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-danger mb-0">@pet.Price.ToString("N0") đ</span>
                            <span class="badge bg-success">Còn @pet.StockQuantity</span>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="d-grid gap-2">
                            <a href="/Pets/Details/@pet.PetId" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
            <h4>Chưa có thú cưng nào</h4>
        </div>
    }
</div>

<div class="bg-light py-5 mt-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                <h5>Đảm bảo chất lượng</h5>
                <p class="text-muted">Thú cưng khỏe mạnh, tiêm phòng đầy đủ</p>
            </div>
            <div class="col-md-3">
                <i class="fas fa-truck fa-3x text-primary mb-3"></i>
                <h5>Giao hàng tận nơi</h5>
                <p class="text-muted">Giao hàng nhanh chóng, an toàn</p>
            </div>
            <div class="col-md-3">
                <i class="fas fa-headset fa-3x text-primary mb-3"></i>
                <h5>Hỗ trợ 24/7</h5>
                <p class="text-muted">Tư vấn và chăm sóc khách hàng</p>
            </div>
            <div class="col-md-3">
                <i class="fas fa-certificate fa-3x text-primary mb-3"></i>
                <h5>Cam kết uy tín</h5>
                <p class="text-muted">Đổi trả trong 7 ngày nếu có vấn đề</p>
            </div>
        </div>
    </div>
</div>
