@model PetShop.Models.Cart

@{
    ViewData["Title"] = "Giỏ hàng";
    var total = Model.CartItems.Sum(ci => ci.Pet!.Price * ci.Quantity);
}

<div class="container my-5">
    <h2 class="mb-4"><i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn</h2>

    @if (Model.CartItems.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model.CartItems)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <img src="@(string.IsNullOrEmpty(item.Pet!.ImageUrl) ? "https://via.placeholder.com/100" : item.Pet.ImageUrl)" 
                                         class="img-fluid rounded" alt="@item.Pet.PetName">
                                </div>
                                <div class="col-md-4">
                                    <h5>@item.Pet.PetName</h5>
                                    <p class="text-muted mb-0">@item.Pet.Breed</p>
                                </div>
                                <div class="col-md-3">
                                    <div class="input-group">
                                        <button class="btn btn-outline-secondary" onclick="updateQuantity(@item.CartItemId, @item.Quantity - 1)">-</button>
                                        <input type="number" class="form-control text-center" value="@item.Quantity" readonly>
                                        <button class="btn btn-outline-secondary" onclick="updateQuantity(@item.CartItemId, @item.Quantity + 1)">+</button>
                                    </div>
                                </div>
                                <div class="col-md-2 text-end">
                                    <h5 class="text-danger mb-0">@((item.Pet.Price * item.Quantity).ToString("N0")) đ</h5>
                                </div>
                                <div class="col-md-1 text-end">
                                    <form method="post" asp-action="RemoveItem" style="display:inline;">
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <button type="submit" class="btn btn-link text-danger p-0">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Tổng cộng</h5>
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính:</span>
                            <span>@total.ToString("N0") đ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Phí vận chuyển:</span>
                            <span class="text-success">Miễn phí</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Tổng:</strong>
                            <strong class="text-danger h4">@total.ToString("N0") đ</strong>
                        </div>
                        <div class="d-grid">
                            <a href="/Orders/Checkout" class="btn btn-primary btn-lg">
                                <i class="fas fa-credit-card"></i> Thanh toán
                            </a>
                        </div>
                        <div class="d-grid mt-2">
                            <a href="/Pets" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Tiếp tục mua hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
            <h4>Giỏ hàng trống</h4>
            <p class="text-muted">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục</p>
            <a href="/Pets" class="btn btn-primary mt-3">
                <i class="fas fa-shopping-bag"></i> Mua sắm ngay
            </a>
        </div>
    }
</div>

@section Scripts {
<script>
    function updateQuantity(cartItemId, quantity) {
        $.post('/Cart/UpdateQuantity', { cartItemId: cartItemId, quantity: quantity }, function(response) {
            if (response.success) {
                location.reload();
            } else {
                alert(response.message);
            }
        });
    }
</script>
}
