@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h3 class="text-center mb-4">
                        <i class="fas fa-sign-in-alt text-primary"></i> Đăng nhập
                    </h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form method="post" asp-action="Login">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="email" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <input type="password" name="password" class="form-control" required>
                        </div>
                        <div class="mb-3 text-end">
                            <a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">
                                <small><i class="fas fa-question-circle"></i> Quên mật khẩu?</small>
                            </a>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </button>
                        </div>
                    </form>

                    <hr>
                    <p class="text-center mb-0">
                        Chưa có tài khoản? <a href="/Account/Register">Đăng ký ngay</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
