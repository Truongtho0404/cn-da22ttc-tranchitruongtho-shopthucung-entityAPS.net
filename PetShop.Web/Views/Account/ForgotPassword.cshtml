@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pet Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .forgot-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }
        .card-header {
            border-radius: 15px 15px 0 0 !important;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card forgot-card">
                    <div class="card-header bg-warning text-white text-center py-4">
                        <h3 class="mb-0"><i class="fas fa-question-circle"></i> Quên mật khẩu</h3>
                    </div>
                    <div class="card-body p-4">
                        @if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i> @ViewBag.Success
                            </div>
                            <div class="text-center mt-3">
                                <a href="@Url.Action("ResetPassword", "Account")" class="btn btn-primary">
                                    <i class="fas fa-key"></i> Đặt lại mật khẩu ngay
                                </a>
                            </div>
                        }
                        else
                        {
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
                                </div>
                            }

                            <p class="text-muted mb-4">Nhập email của bạn để nhận mã xác nhận đặt lại mật khẩu</p>

                            <form method="post" asp-action="ForgotPassword">
                                @Html.AntiForgeryToken()
                                
                                <div class="mb-4">
                                    <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                        <input type="email" class="form-control" id="email" name="email" placeholder="email@example.com" required>
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-warning text-white">
                                        <i class="fas fa-paper-plane"></i> Lấy mã xác nhận
                                    </button>
                                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left"></i> Quay lại đăng nhập
                                    </a>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
