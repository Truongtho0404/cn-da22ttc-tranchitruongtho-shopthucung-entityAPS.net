@model IEnumerable<PetShop.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<h4 class="mb-4"><i class="fas fa-users"></i> Danh sách người dùng</h4>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Điện thoại</th>
                            <th>Ngày đăng ký</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td><strong>@user.FullName</strong></td>
                                <td>@user.Email</td>
                                <td>@user.Phone</td>
                                <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Bị khóa</span>
                                    }
                                </td>
                                <td>
                                    <button onclick="toggleStatus(@user.UserId)" class="btn btn-sm btn-warning">
                                        <i class="fas fa-@(user.IsActive ? "lock" : "unlock")"></i>
                                        @(user.IsActive ? "Khóa" : "Mở khóa")
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function toggleStatus(userId) {
        if (confirm('Bạn có chắc muốn thay đổi trạng thái người dùng này?')) {
            $.post('/Admin/ToggleUserStatus', { userId: userId }, function(response) {
                if (response.success) {
                    alert('Cập nhật thành công!');
                    location.reload();
                } else {
                    alert('Có lỗi xảy ra!');
                }
            });
        }
    }
</script>
}
