@model IEnumerable<PetShop.Models.Category>

@{
    ViewData["Title"] = "Quản lý danh mục";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="fas fa-list"></i> Quản lý danh mục</h4>
    <a href="/Admin/CreateCategory" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm mới
    </a>
</div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryId</td>
                            <td><strong>@category.CategoryName</strong></td>
                            <td>@category.Description</td>
                            <td>@category.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="/Admin/EditCategory/@category.CategoryId" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <button onclick="deleteCategory(@category.CategoryId)" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Xóa
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

@section Scripts {
    <script>
        function deleteCategory(id) {
            if (confirm('Bạn có chắc muốn xóa danh mục này?')) {
                fetch('/Admin/DeleteCategory/' + id, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message || 'Có lỗi xảy ra');
                    }
                });
            }
        }
    </script>
}
