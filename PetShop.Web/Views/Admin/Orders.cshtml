@model IEnumerable<PetShop.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="card">
    <div class="card-header bg-white">
        <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> Danh sách đơn hàng</h5>
    </div>
    <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã ĐH</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Sản phẩm</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>#@order.OrderId</strong></td>
                                <td>
                                    @order.User?.FullName<br>
                                    <small class="text-muted">@order.Phone</small>
                                </td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@order.OrderDetails.Count sản phẩm</td>
                                <td class="text-danger"><strong>@order.TotalAmount.ToString("N0") đ</strong></td>
                                <td>
                                    <span class="badge bg-@(order.Status == "Completed" ? "success" : 
                                                            order.Status == "Pending" ? "warning" : 
                                                            order.Status == "Confirmed" ? "info" : 
                                                            order.Status == "Shipping" ? "primary" : "secondary")">
                                        @(order.Status == "Pending" ? "Chờ xác nhận" : 
                                          order.Status == "Confirmed" ? "Đã xác nhận" : 
                                          order.Status == "Shipping" ? "Đang giao" : 
                                          order.Status == "Completed" ? "Hoàn thành" : "Đã hủy")
                                    </span>
                                </td>
                                <td>
                                    <a href="/Admin/OrderDetail/@order.OrderId" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i> Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


