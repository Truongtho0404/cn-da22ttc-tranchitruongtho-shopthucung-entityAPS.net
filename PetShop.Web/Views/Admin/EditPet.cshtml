@model PetShop.Models.Pet

@{
    ViewData["Title"] = "Chỉnh sửa thú cưng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4><i class="fas fa-edit"></i> Chỉnh sửa thú cưng</h4>
    <a href="/Admin/Pets" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form method="post" asp-action="EditPet" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="PetId" />
            <input type="hidden" asp-for="CreatedAt" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Tên thú cưng</label>
                                <input type="text" asp-for="PetName" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Danh mục</label>
                                <select asp-for="CategoryId" class="form-select" required>
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        <option value="@category.CategoryId">@category.CategoryName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Giống</label>
                                <input type="text" asp-for="Breed" class="form-control">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Tuổi (tháng)</label>
                                <input type="number" asp-for="Age" class="form-control" min="1">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Giới tính</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="Đực">Đực</option>
                                    <option value="Cái">Cái</option>
                                    <option value="Không xác định">Không xác định</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Giá (VNĐ)</label>
                                <input type="number" asp-for="Price" class="form-control" required min="0">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Số lượng tồn kho</label>
                                <input type="number" asp-for="StockQuantity" class="form-control" required min="0">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Hình ảnh hiện tại</label>
                            <div class="row g-2 mb-3" id="existingImages">
                                @if (Model.PetImages != null && Model.PetImages.Any())
                                {
                                    foreach (var img in Model.PetImages.OrderByDescending(x => x.IsDefault))
                                    {
                                        <div class="col-md-3" id="img-@img.ImageId">
                                            <div class="position-relative">
                                                <img src="@img.ImageUrl" class="img-thumbnail" style="width: 100%; height: 150px; object-fit: cover;">
                                                @if (img.IsDefault)
                                                {
                                                    <span class="badge bg-success position-absolute top-0 start-0 m-1">Mặc định</span>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-warning position-absolute top-0 start-0 m-1" 
                                                            onclick="setDefaultImage(@img.ImageId)">
                                                        <i class="fas fa-star"></i>
                                                    </button>
                                                }
                                                <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1" 
                                                        onclick="deleteImage(@img.ImageId)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                }
                                else if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div class="col-md-3">
                                        <img src="@Model.ImageUrl" class="img-thumbnail" style="width: 100%; height: 150px; object-fit: cover;">
                                        <span class="badge bg-info">Ảnh cũ</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-md-3">
                                        <img src="https://via.placeholder.com/150" class="img-thumbnail" style="width: 100%; height: 150px; object-fit: cover;">
                                    </div>
                                }
                            </div>
                            <label class="form-label">Thêm ảnh mới (có thể chọn nhiều ảnh)</label>
                            <input type="file" name="imageFiles" class="form-control" accept="image/*" id="imageFiles" onchange="previewNewImages(event)" multiple>
                            <small class="text-muted d-block">Giữ <kbd>Ctrl</kbd> (Windows) hoặc <kbd>Cmd</kbd> (Mac) để chọn nhiều ảnh</small>
                            <small class="text-muted d-block">Chọn JPG, PNG hoặc GIF (tối đa 5MB mỗi ảnh)</small>
                            <div class="mt-3 row g-2" id="newImagePreviews"></div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" asp-for="IsAvailable" class="form-check-input">
                            <label class="form-check-label">Có sẵn để bán</label>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập nhật thú cưng
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @section Scripts {
            <script>
                function previewNewImages(event) {
                    const files = event.target.files;
                    const previewContainer = document.getElementById('newImagePreviews');
                    previewContainer.innerHTML = '';

                    console.log('Files selected for upload:', files.length);

                    if (files.length === 0) {
                        previewContainer.innerHTML = '<div class="col-12 alert alert-info">Chưa chọn ảnh mới nào</div>';
                        return;
                    }

                    for (let i = 0; i < files.length; i++) {
                        const file = files[i];
                        if (file) {
                            const reader = new FileReader();
                            reader.onload = function(e) {
                                const col = document.createElement('div');
                                col.className = 'col-md-3';
                                
                                const imgContainer = document.createElement('div');
                                imgContainer.className = 'position-relative';
                                
                                const img = document.createElement('img');
                                img.src = e.target.result;
                                img.className = 'img-thumbnail';
                                img.style.width = '100%';
                                img.style.height = '150px';
                                img.style.objectFit = 'cover';
                                
                                const badge = document.createElement('span');
                                badge.className = 'badge bg-primary position-absolute top-0 start-0 m-1';
                                badge.textContent = 'Ảnh mới';
                                
                                imgContainer.appendChild(img);
                                imgContainer.appendChild(badge);
                                col.appendChild(imgContainer);
                                previewContainer.appendChild(col);
                            }
                            reader.readAsDataURL(file);
                        }
                    }
                }

                function deleteImage(imageId) {
                    if (!confirm('Bạn có chắc muốn xóa ảnh này?')) return;

                    // Use FormData instead of JSON
                    const formData = new FormData();
                    formData.append('imageId', imageId);

                    fetch('/Admin/DeletePetImage', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => {
                        console.log('Response status:', response.status);
                        return response.json();
                    })
                    .then(data => {
                        console.log('Response data:', data);
                        if (data.success) {
                            document.getElementById('img-' + imageId).remove();
                            alert(data.message);
                            location.reload();
                        } else {
                            alert('Lỗi: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Có lỗi xảy ra: ' + error.message);
                    });
                }

                function setDefaultImage(imageId) {
                    // Use FormData instead of JSON
                    const formData = new FormData();
                    formData.append('imageId', imageId);

                    fetch('/Admin/SetDefaultImage', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => {
                        console.log('Response status:', response.status);
                        return response.json();
                    })
                    .then(data => {
                        console.log('Response data:', data);
                        if (data.success) {
                            alert(data.message);
                            location.reload();
                        } else {
                            alert('Lỗi: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Có lỗi xảy ra: ' + error.message);
                    });
                }
            </script>
            }
