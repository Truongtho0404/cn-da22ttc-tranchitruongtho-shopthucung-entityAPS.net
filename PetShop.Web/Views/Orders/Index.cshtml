@model IEnumerable<PetShop.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container my-5">
    <h2 class="mb-4"><i class="fas fa-box"></i> Đơn hàng của tôi</h2>

    @if (Model.Any())
    {
        foreach (var order in Model)
        {
            var statusClass = order.Status switch
            {
                "Pending" => "warning",
                "Confirmed" => "info",
                "Shipping" => "primary",
                "Completed" => "success",
                "Cancelled" => "danger",
                _ => "secondary"
            };

            var statusText = order.Status switch
            {
                "Pending" => "Chờ xác nhận",
                "Confirmed" => "Đã xác nhận",
                "Shipping" => "Đang giao",
                "Completed" => "Hoàn thành",
                "Cancelled" => "Đã hủy",
                _ => order.Status
            };

            <div class="card mb-3">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <strong>Đơn hàng #@order.OrderId</strong>
                            <span class="badge bg-@statusClass ms-2">@statusText</span>
                        </div>
                        <div class="col-md-6 text-end">
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> @order.OrderDate.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            @foreach (var detail in order.OrderDetails.Take(2))
                            {
                                <div class="d-flex mb-2">
                                    <img src="@(string.IsNullOrEmpty(detail.Pet!.ImageUrl) ? "https://via.placeholder.com/50" : detail.Pet.ImageUrl)" 
                                         class="rounded me-2" style="width: 50px; height: 50px; object-fit: cover;">
                                    <div>
                                        <div>@detail.Pet.PetName</div>
                                        <small class="text-muted">x@detail.Quantity - @detail.UnitPrice.ToString("N0") đ</small>
                                    </div>
                                </div>
                            }
                            @if (order.OrderDetails.Count > 2)
                            {
                                <small class="text-muted">+@(order.OrderDetails.Count - 2) sản phẩm khác</small>
                            }
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="mb-2">
                                <strong>Tổng: </strong>
                                <span class="text-danger h5">@order.TotalAmount.ToString("N0") đ</span>
                            </div>
                            <a href="/Orders/Details/@order.OrderId" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
            <h4>Chưa có đơn hàng nào</h4>
            <a href="/Pets" class="btn btn-primary mt-3">
                <i class="fas fa-shopping-bag"></i> Mua sắm ngay
            </a>
        </div>
    }
</div>
